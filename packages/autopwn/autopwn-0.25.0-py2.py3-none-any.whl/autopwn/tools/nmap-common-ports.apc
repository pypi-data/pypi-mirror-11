name: nmap_common_ports
dependencies: ['nmap']
url: http://nmap.org/
description: Nmap ("Network Mapper") is a free and open source (license) utility for network discovery and security auditing.
autopwn_version: 0.25.0
assessment_groups: ['nmap-common-ports', 'infrastructure']

options:
    target_name:
        required: True
        example_values: target1
    target:
        type: ip_address
        required: ['ip_address_list']
        example_values: 127.0.0.1|example.org
    ip_address_list:
        type: file
        required: ['target']
        example_values: ~/ips.txt

option-formats:
    file-option-format:
        option-placeholder: ip_address_list
        option: '-iL'
        option-separator: ' '
        substitution: '{0}'

execute_string: "nmap -A -sS -sC -sV {ip_address_list} {target} -oA {output_dir}/{date}_{target_name}_nmap_common_ports"
stdout: True
