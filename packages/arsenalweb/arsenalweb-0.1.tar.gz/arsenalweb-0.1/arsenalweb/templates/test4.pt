<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>resizable demo</title>

  <style>
    @import url(http://fonts.googleapis.com/css?family=Roboto);
    @import url(//fonts.googleapis.com/css?family=Inconsolata); /* Monospace */
    
    html, body {
        height:99%;
        width:99%;
    }
    
    body {
        font-family: "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 300;
        font-size: 80%;
        color: #000000;
        background: #FFFFFF;
    }

    #panel_c {
        width: 100%;
        height: 100%;
    }
    .wrap {
        width: 100%;
        height: 100%;
    }
    .resizable {
        width: 100%;
        height: 50%;
    }
    .content_c {
        position : relative;
        height:100%;
        overflow: auto;
        border: 1px solid #c0c0c0;
    }
    .content {
        padding: 10px;
    }
    .resizable2 {
        height: 50%;
    }
    .ui-resizable {
        position: relative;
    }
    .ui-resizable-handle {
        position:absolute;
        font-size: 0.1px;
        display: block;
        -ms-touch-action: none;
        touch-action: none;
    }
    .ui-resizable-s {
        position:absolute;
        cursor: ns-resize;
        height: 8px;
        width: 100%;
        bottom: 0;
        left: 0;
        background: #f6f6f6 url('/static/handle-h.png') no-repeat center center;
        border-top: 1px solid #c0c0c0;
    }
    .ui-resizable-disabled .ui-resizable-handle,
    .ui-resizable-autohide .ui-resizable-handle {
        display: none;
    }
  </style>

   <script src="/static/jquery-2.1.3.min.js"></script>
   <script src="/static/jquery-ui.min.js"></script>
</head>
<body>

<script>
      $(document).ready(function() {

    $(".resizable1").resizable(
    {
        autoHide: false,
        handles: 's',
        minHeight: 70,
        containment: "#panel_c",
        resize: function(s, ui) 
        {
            var parent = ui.element.parent();
            var remainingSpace = parent.height() - ui.element.outerHeight(),
                divTwo = ui.element.next(),
                divTwoHeight = (remainingSpace - (divTwo.outerHeight() - divTwo.height()))/parent.height()*100+"%";
                divTwo.height(divTwoHeight);
        },
        stop: function(s, ui) 
        {
            var parent = ui.element.parent();
            ui.element.css(
            {
                height: ui.element.height()/parent.height()*100+"%",
            });
        }
    });
});
</script>

<div id="panel_c">
  <div class="wrap">
      <div class="resizable resizable1">
        <div class="content_c">
          <div class="content">
            <p>
                this is some text in div 1</p>
            <p>
                this is some text in div 1</p>
            <p>
                this is some text in div 1</p>

          </div>
        </div>
      </div>

      <div class="resizable resizable2">
        <div class="content_c">
          <div class="content">
            <p>
             this is some text in div 2</p>
            <p>
             this is some text in div 2</p>
            <p>
             this is some text in div 2</p>
          </div>
        </div>
      </div>
  </div>
</div>
 
</body>
</html>
