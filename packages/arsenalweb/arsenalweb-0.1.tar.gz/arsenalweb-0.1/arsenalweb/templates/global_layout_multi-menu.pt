<!DOCTYPE html>
<html lang="en-US"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:define-macro="layout">
  <head profile="http://www.w3.org/2005/10/profile">
    <link rel="icon"
        type="image/png"
        href="/static/img/favico.png?v=3">
    <title>Arsenal: ${page_title_name}</title>
    <link href="/static/css/arsenal.css" rel="stylesheet" type="text/css" />
    <script src="/static/js/jquery-2.1.3.min.js"></script>
    <script src="/static/js/jquery-ui.min.js"></script>
    <script src="/static/js/jquery.dragtable.js"></script>
    <script src="/static/js/jquery.tablesorter.min.js"></script>
    <script src="/static/js/resizable.js"></script>
  </head>
  <body>

    <script>
      $(document).ready(function() {
        // Table Sorting
        $("#searchResultsTable").tablesorter({
            sortList: [[0,0]]
        });

        // Column dragging
        $('#searchResultsTable').dragtable({
            maxMovingRows:1,
            dragHandle:'.drag-handle',
            persistState: function(table) {
              if (!window.sessionStorage) return;
              var ss = window.sessionStorage;
              table.el.find('th').each(function(i) {
                if(this.id != '') {table.sortOrder[this.id]=i;}
              });
              ss.setItem('tableorder',JSON.stringify(table.sortOrder));
            },
            restoreState: eval('(' + window.sessionStorage.getItem('tableorder') + ')')
        });

        // Main menu overlay
        function overlay() {
          var over = '<div id="overlay"></div>';
          $(over).appendTo('body');
        }
        function no_overlay() {
          $('#overlay').remove();
        }
        $( "#main_menu" ).hover(
          function() {
            overlay();
          }, function() {
            no_overlay();
          }
        );
        // Keep the menu button border on sub-menu
        $( "#border_hover" ).hover(
          function() {
            $( '#main_menu_btn' ).addClass( "main_menu_btn_border" );
          }, function() {
            $( '#main_menu_btn' ).removeClass( "main_menu_btn_border" );
          }
        );

      });
    </script>

    <div id="top_bg"></div>

    <div id="top">
      <div id='top1'>
        <div id="top1_left">
          <div id='logo_container'>
            <a href='/'><img border="0" src="/static/img/logo-white-small.png"></a>
          </div> <!-- logo_container -->
        </div> <!-- top1_left -->

        <form id="search_form" action="/search">
        <div id="top1_right">
          <div id="search_outer_c">
            <div id="search_inner_c">
              <div id="search_left_c">
                <div id="search_select_c">
                  <select>
                    <option selected="selected">nodes</option>
                    <option>node groups</option>
                    <option>tags</option>
                    <option>operating_systems</option>
                    <option>hardware_profiles</option>
                  </select>
                </div> <!-- search_select_c -->
              </div> <!-- search_left_c -->
              <div id="search_middle_c">
                  <input id="search_box" type="text">
              </div> <!-- search_middle_c -->
              <div id="search_right_c">
                  <input type="submit" id="search_bar_btn" value="" alt="search">
              </div> <!-- search_right_c -->
            </div> <!-- search_inner_c -->
          </div> <!-- search_outer_c -->
        </div> <!-- top1_right -->
        </form>
      </div> <!-- top1 -->
      <div id='top2'>
        <div id='main_menu'>
          <ul class="main_menu">
            <li class="main_menu">
              <span id="main_menu_btn">Menu</span>
              <ul id='border_hover' class="main_menu">
                <li>
                  <div class="menu_group">
                    <h3>Manage</h3>
                    <a href="/nodes">nodes</a><br>
                    <a href="/node_groups">node groups</a><br>
                    <a href="/tags">tags</a><br>
                  </div>
                  <div class="menu_group">
                    <h3>Meta</h3>
                    <a href="/statuses">statuses</a><br>
                    <a href="/hardware_profiles">hardware profiles</a><br>
                    <a href="/operating_systems">operating systems</a><br>
                  </div>
                  <div class="menu_group">
                    <h3>Admin</h3>
                    <a href="/accounts">accounts</a><br>
                    <a href="/account_groups">groups</a><br>
                    <a href="/audits">audits</a>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div> <!-- main_menu -->
      </div> <!-- top2 -->
    </div> <!-- top -->

    <div id="main_c">
      <div id='heading_text_c'>
        <div id='page_title'><span class='page_title_type'>${page_title_type}</span><span class='page_title_name'>${page_title_name}</span></div>
      </div>
      <div id='heading_menu_1_c'>
        <div class="columns_menu_p slide_menu_c" id="columns_menu_c">
          <div id="columns_menu_btn" class="slide_menu_btn">Columns</div>
          <div class="columns_menu slide_menu">
            <p>Select the columns you wish to display</p>
            <ul>
              <li class="columns_menu_content">
                <input type="checkbox" id="cm-status_name" name="cm-status_name" checked="checked"/>
                <label for="cm-status_name">Status Name</label>
              </li>
              <li class="columns_menu_content">
                <input type="checkbox" id="cm-status_id" name="cm-status_id" checked="checked"/>
                <label for="cm-status_id">Status ID</label>
              </li>
              <li class="columns_menu_content">
                <input type="checkbox" id="cm-description" name="cm-description" checked="checked"/>
                <label for="cm-description">Description</label>
              </li>
            </ul>
          </div> <!-- columns_menu -->
        </div> <!-- columns_menu_c -->
      </div> <!-- heading_menu_1_c -->


      <div id='heading_menu_2_c'>
        <div class="other_menu_p slide_menu_c" id="other_menu_c">
          <div id="other_menu_btn" class="slide_menu_btn">Other</div>
          <div class="other_menu slide_menu">
            <p>Select somesing</p>
            <ul>
              <li class="columns_menu_content">
                <input type="checkbox" id="cm-one" name="cm-one" checked="checked"/>
                <label for="cm-one">One</label>
              </li>
              <li class="columns_menu_content">
                <input type="checkbox" id="cm-two" name="cm-two" checked="checked"/>
                <label for="cm-two">Two</label>
              </li>
              <li class="columns_menu_content">
                <input type="checkbox" id="cm-three" name="cm-three" checked="checked"/>
                <label for="cm-three">Three</label>
              </li>
            </ul>
          </div> <!-- columns_menu -->
        </div> <!-- columns_menu_c -->
      </div> <!-- heading_menu_1_c -->


      <div metal:define-slot="content"> </div>

    </div> <!-- main_c -->

  </body>
</html>
