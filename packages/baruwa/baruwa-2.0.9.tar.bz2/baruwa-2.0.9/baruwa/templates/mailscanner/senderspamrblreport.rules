% for domain in domains:
FromOrTo:	*@${domain.name}	%reports-base%/${domain.language}/sender.spam.rbl.report.txt
% for alias in domain.aliases:
% if alias.status:
FromOrTo:	*@${alias.name}	%reports-base%/${domain.language}/sender.spam.rbl.report.txt
% endif
% endfor
% endfor
# Default rule
FromOrTo:  default  %report-dir%/sender.spam.rbl.report.txt
