<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="ps.plone.realestatefont">

  <!-- GenericSetup Profiles. -->
  <!-- ====================== -->
  <genericsetup:registerProfile
      name="default"
      title="Real Estate icon font"
      directory="profiles/default"
      description="Installs the fonts theme in the Plone site."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:registerProfile
      name="uninstall"
      title="Real Estate icon font: Uninstall"
      directory="profiles/uninstall"
      description="Removes the fonts theme from the Plone site."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />


  <!-- GenericSetup Import Steps. -->
  <!-- ========================== -->
  <genericsetup:importStep
      name="ps.plone.realestatefont-postInstall"
      title="Real Estate icon font post_install import step"
      description="Post install import step from ps.plone.realestatefont."
      handler=".setuphandlers.post_install">
  </genericsetup:importStep>


  <!-- GenericSetup Upgrade Steps. -->
  <!-- =========================== -->
  <!--
  <genericsetup:upgradeStep
      title="Upgrade ps.plone.realestatefont"
      description="Updrage step description."
      source="1000"
      destination="1001"
      handler=".migration.migrate_to_1001"
      sortkey="1"
      profile="ps.plone.realestatefont:default"
      />
  -->

</configure>
