{
    "title": "Taskcluster MAR signing task minimal schema",
    "type": "object",
    "properties": {
        "scopes": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "payload": {
            "type": "object",
            "properties": {
                "signingManifest": {
                    "type": "string"
                }
            },
            "required": ["signingManifest"]
        }
    },
    "required": ["scopes", "payload"]
}
