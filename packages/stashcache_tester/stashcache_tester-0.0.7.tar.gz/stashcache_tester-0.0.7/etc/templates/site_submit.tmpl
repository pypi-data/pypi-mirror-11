# Template for submission to a single site
# Variables that should be set in the DAG:
# - SITE: Site name to be used in the requirements


initialdir = $(SITE)
universe = vanilla
output = output.$(SITE).$(PROCESS)
error = error.$(SITE).$(PROCESS)
log = $(SITE).log

executable = $(SITE)/site_test.sh
arguments = $(SITE)

requirements = GLIDEIN_ResourceName =?= "$(SITE)"

+WantsStashCache = true
should_transfer_files = IF_NEEDED
when_to_transfer_output = ON_EXIT

# Remove the job if it has not completed 6 hours after initial submission.
periodic_remove = (CurrentTime - QDate) > 21600

# Add stash chirp variables back to the log
job_ad_information_attrs = Chirp_StashCp_Prefix, Chirp_StashCp_FileSize, Chirp_StashCp_DlTimeMs, Chirp_StashCp_Dest, Chirp_StashCp_Used, Chirp_StashCp_FileName, Chirp_StashCp_DLStart

queue {{ numsubmit }}
