    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="ityou.follow"
    purge="False">

    <configlet
        title="ITYOU ESI - Follow"
        action_id="follow"
        appId="ityou.follow"
        category="Products"
        condition_expr=""
