<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">


    <replace css:theme="title" css:content="title" nocontent="ignore" />

    <replace css:theme="#portaltab-web" css:content="#portaltab-web" nocontent="ignore" />
<!--    <replace css:theme=".portletNavigationTree" css:content=".portletNavigationTree" nocontent="ignore" /> -->
	<copy href="/sitemap/" css:theme="#gobal-navi" css:content=".navTreeLevel2" />


    <!-- slider -->
    <drop attributes="width height class style" css:content=".set > div > img" />     
    <drop attributes="width height class style" css:content=".portlet-static-dias img" />     
    <replace css:theme-children=".mscarousel" css:content-children=".mscarousel" />  
    <drop css:content="#content-core .mscarousel" /> 
    <!-- /slider -->

    <copy href="/sitemap/" css:theme="#smoothmenu1" css:content=".navTreeLevel2" />

    <drop css:content="#viewlet-below-content-title" />
    <drop css:content="#viewlet-above-content-title" />
    <drop css:content="#viewlet-above-content" />
    <drop css:content="#viewlet-below-content" />
    <drop css:content="#livesearch-container" />
    <drop css:content=".documentActions" />
    <drop css:content="#like-viewlet" />
    <drop css:content=".ity-navbar" />
    
    <!-- Plone:portal-breadcrumbs, wird von esi entfernt -->
    <replace css:theme-children="#breadcrumbs"  css:content-children="#portal-breadcrumbs" />   
    <drop css:content="#breadcrumbs-1" />  


    <!-- Navigation -->
    <drop css:content=".portlet-static-zweitnavigation > dt.portletHeader" />
    <strip css:content=".portlet-static-zweitnavigation > dd.portletItem" />
    <replace css:theme-children="#site-links" css:content-children=".portlet-static-zweitnavigation" />


    <replace css:theme-children="#column-one"       css:content-children="#portal-column-one" />
    <replace css:theme-children="#column-content"   css:content-children="#portal-column-content" />
    <replace css:theme-children="#column-two"       css:content-children="#portal-column-two" />

    <replace css:theme-children="#footer"           css:content-children="#portal-footer" />    
    <replace css:theme-children="#colophon"     css:content-children="#portal-colophon" />    


</rules>
