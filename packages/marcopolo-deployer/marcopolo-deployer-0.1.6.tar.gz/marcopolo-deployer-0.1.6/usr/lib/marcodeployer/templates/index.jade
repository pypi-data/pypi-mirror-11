extends /usr/lib/marcodeployer/templates/base.jade

block content
  div.page#statusmonitor
    div.container
      div.row
        div(width="20%", style="display:block;margin-left:auto;margin-right:auto;")
          img(width="20%", style="display:block;margin-left:auto;margin-right:auto;", src="{{ static_url('img/wait.gif') }}")
          p(width="20%", style="text-align:center;display:block;margin-left:auto;margin-right:auto;") Buscando nodos
  div.page#deployer 
    div.container
      div.row
        div.col-sm-6
          div.row.col-sm-12
            div#dragandrophandler Drag and drop files here
            div.alert.alert-success
              p#status

          div.row.col-sm-12
            ul.list-group#list

          div.row.col-sm-12#controls
             button#uploadbutton.btn.btn-info Upload

        div.col-sm-6
          div.row#listanodos
            div#wait(width="20%", style="display:block;margin-left:auto;margin-right:auto;")
              img(width="20%", style="display:block;margin-left:auto;margin-right:auto;", src="{{ static_url('img/wait.gif') }}")
              p(width="20%", style="text-align:center;display:block;margin-left:auto;margin-right:auto;") Buscando nodos
  div.page#logger
    div.container
      div.row#window
        ul.nav.nav-tabs

  div.page#shell
    div.container
      div.row
        div.col-lg-10.input-group.input-group-lg#command
          input.form-control(type="text", placeholder="username:~>")
      div.row#shellwindow
        //ul.nav.nav-tabs#shelltabs
