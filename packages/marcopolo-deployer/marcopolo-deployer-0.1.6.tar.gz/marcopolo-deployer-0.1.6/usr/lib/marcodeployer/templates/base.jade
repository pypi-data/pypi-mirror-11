doctype html
- var project_name = "Deployer"
html
  head
    block head
      meta(charset="UTF-8")
      script(src="{{ static_url('js/jquery.min.js') }}")
      script(src="{{ static_url('js/d3.min.js') }}")
      script(src="{{ static_url('js/marco.js') }}")
      script(src="{{ static_url('js/logger.js') }}")
      script(src="{{ static_url('js/jquery.cookie.js') }}")
      

      script(src="{{ static_url('js/gauge.js') }}")
      script(src="{{ static_url('js/graphpolo.js') }}")
      
      script(src="{{ static_url('js/shell.js') }}")

      link(rel="stylesheet" href="{{ static_url('css/bootstrap.min.css') }}")
      link(rel="stylesheet" href="{{ static_url('css/style.css') }}")
      
      script(src="{{ static_url('js/bootstrap.min.js') }}")
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title #{project_name}
  body
    div.navbar.navbar-default
      div.container
        div.navbar-header
          a.navbar-brand(href='/')
            span.navbar-brand-label #{project_name}
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav.tabs
            li: a(href="#statusmonitor")
              i.fa.fa-home
              | Status Monitor
            li: a(href='#deployer')
              i.fa.fa-home
              | Deployer
            li: a(href="#logger").logger-link
              i.fa.fa-home
              | Logger 
              span.badge.logger-badge(style="display:none") 0
            li: a(href="#shell")
              i.fa.fa-home
              | Shell
            li: a(href='/logout/') 
              i.fa.fa-home
              span.username #{user}
              |: logout
          ul.nav.navbar-nav.navbar-right
            li: p.navbar-text 
              span#count 0
              |  nodes available
    block content        
    





