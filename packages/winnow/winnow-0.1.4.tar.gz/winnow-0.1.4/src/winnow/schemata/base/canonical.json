{
    "id": "https://opendesk.cc/schemata/base/canonical.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Winnow Canonical",
    "type": "object",
    "properties": {
        "source": {
            "type": "string"
        },
        "path": {
            "type": "string"
        },
        "aliases": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "base": {
            "type": "string"
        },
        "version": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "maxItems": 3,
            "minItems": 3
        },
        "changes": {
            "type": "string"
        },
        "shortcode": {
            "type": "string"
        },
        "is_default": {
            "type": "boolean"
        },
        "is_public": {
            "type": "boolean"
        },
        "licenses": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["schema", "source", "path", "version", "changes"]
}

