{
    "id": "https://opendesk.cc/schemata/base/set.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Winnow Set",
    "type": "object",
    "allOf": [
        {"$ref": "https://opendesk.cc/schemata/base/option.json#"},
        {
            "properties": {
                "default": {
                    "type": "string"
                },
                "values": {"oneOf":
                    [
                        {
                            "type": "string"
                        },
                        {
                            "allOf": [
                                {"$ref": "https://opendesk.cc/schemata/base/options.json#"},
                                {"$ref": "https://opendesk.cc/schemata/base/value.json#"}
                            ]
                        },
                        {
                            "type": "array",
                            "items": {
                                "oneOf":[
                                    {
                                        "allOf": [
                                            {"$ref": "https://opendesk.cc/schemata/base/options.json#"},
                                            {"$ref": "https://opendesk.cc/schemata/base/value.json#"}
                                        ]
                                    },
                                    {
                                        "type": "string"
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            "required": ["values"],
            "oneOf": [
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "pattern": "set::string"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "pattern": "set::colour"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "pattern": "set::size"
                        }
                    }
                },
                {
                    "properties": {
                        "type": {
                            "type": "string",
                            "pattern": "set::resource"
                        }
                    }
                }
            ]
        }
    ]
}
