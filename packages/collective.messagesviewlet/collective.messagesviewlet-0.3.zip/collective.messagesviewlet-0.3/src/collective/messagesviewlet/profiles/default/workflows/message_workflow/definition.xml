<?xml version="1.0"?>
<dc-workflow workflow_id="message_workflow"
             title="message_workflow"
             description=" - Workflow for messages."
             state_variable="review_state"
             initial_state="inactive"
             manager_bypass="False"
             xmlns:i18n="http://xml.zope.org/namespaces/i18n" 
             i18n:domain="plone">             
             >
 <permission>Access contents information</permission>
 <permission>Change portal events</permission>
 <permission>Modify portal content</permission>
 <permission>Review portal content</permission>
 <permission>Delete objects</permission>
 <permission>View</permission>
 <state state_id="activated_for_anonymous" title="activated_for_anonymous" i18n:attributes="title">
  <exit-transition transition_id="activate_for_members"/>
  <exit-transition transition_id="activate_for_local_roles"/>
  <exit-transition transition_id="disactivate"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Change portal events" acquired="False">
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>    
 </state>
 <state state_id="activated_for_local_roles" title="activated_for_local_roles"  i18n:attributes="title">
  <exit-transition transition_id="activate_for_anonymous"/>
  <exit-transition transition_id="activate_for_members"/>
  <exit-transition transition_id="disactivate"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="Change portal events" acquired="False">
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>      
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reader</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>      
 </state>
 <state state_id="activated_for_members" title="activated_for_members"  i18n:attributes="title">
  <exit-transition transition_id="activate_for_anonymous"/>
  <exit-transition transition_id="activate_for_local_roles"/>
  <exit-transition transition_id="disactivate"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Authenticated</permission-role>   
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="Change portal events" acquired="False">
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>      
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Authenticated</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>      
 </state>
 <state state_id="inactive" title="inactive"  i18n:attributes="title">
  <exit-transition transition_id="activate_for_anonymous"/>
  <exit-transition transition_id="activate_for_members"/>
  <exit-transition transition_id="activate_for_local_roles"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="Change portal events" acquired="False">
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>      
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Review portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Site Administrator</permission-role>   
  </permission-map>      
 </state>
 <transition transition_id="activate_for_anonymous" title="activate_for_anonymous"  i18n:attributes="title" new_state="activated_for_anonymous" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=activate_for_anonymous" category="workflow" icon="">activate_for_anonymous</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="activate_for_local_roles" title="activate_for_local_roles"  i18n:attributes="title" new_state="activated_for_local_roles" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=activate_for_local_roles" category="workflow" icon="">activate_for_local_roles</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="activate_for_members" title="activate_for_members"  i18n:attributes="title" new_state="activated_for_members" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=activate_for_members" category="workflow" icon="">activate_for_members</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="disactivate" title="disactivate"  i18n:attributes="title" new_state="inactive" trigger="USER" before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=disactivate" category="workflow" icon="">disactivate</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Reviewer tasks</description>
  <action url="%(portal_url)s/search?review_state=pending" category="global" icon="">Pending (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the previous transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
